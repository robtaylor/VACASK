    fig1.axes[4].set_ylabel('V [V]')
    fig1.axes[4].set_xlabel('time [ms]')
    fig1.axes[4].plot(time*1000, vam, marker=".")

    fig1.axes[5].set_title('FM')
    fig1.axes[5].set_ylabel('V [V]')
    fig1.axes[5].set_xlabel('time [ms]')
    fig1.axes[5].plot(time*1000, vfm, marker=".")

    plt.show()
